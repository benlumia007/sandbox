#!/bin/bash

sandbox_config="/srv/config/sandbox-custom.yml"

xdebug=`cat ${sandbox_config} | shyaml get-value options.xdebug 2> /dev/null`

if [[ $xdebug == "True" ]]; then
    sudo phpenmod xdebug
    sudo service php7.2-fpm restart
else
    sudo phpdismod xdebug
    sudo service php7.2-fpm restart
fi
